<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- ImageButton for previous week -->
        <ImageButton
            android:id="@+id/imgBtnWeekBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_navigate_before_24"
            app:layout_constraintEnd_toStartOf="@+id/date_range_text_view"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- TextView for date range -->
        <TextView
            android:id="@+id/date_range_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Dates"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- ImageButton for next week -->
        <ImageButton
            android:id="@+id/imgBtnWeekAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_navigate_next_24"
            app:layout_constraintStart_toEndOf="@+id/date_range_text_view"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
